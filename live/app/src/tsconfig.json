{
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        "jsx": "react",
        "isolatedModules": false,
        "experimentalDecorators": false,
        "declaration": true,
        "noImplicitUseStrict": false,
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
    },
    "compileOnSave": false,
    "buildOnSave": false,
    "atom": {
        "rewriteTsconfig": false
    }
}
